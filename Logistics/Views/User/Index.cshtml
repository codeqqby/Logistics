@{
    ViewBag.Title = "用户管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    #fm {
        margin: 0;
        padding: 10px 30px;
    }

    .ftitle {
        font-size: 14px;
        font-weight: bold;
        padding: 5px 0;
        margin-bottom: 10px;
        border-bottom: 1px solid #ccc;
    }

    .fitem {
        margin-bottom: 5px;
    }

        .fitem label {
            display: inline-block;
            width: 80px;
        }

        .fitem input {
            width: 160px;
        }
</style>
<div id="toolbar" style="padding: 5px; height: auto">
    <div style="margin-top: 5px;margin-left:10px;">
        用户名:  
           <input id="Name-search" class="easyui-textbox" style="margin-right: 10px; width: 100px;" />
        <a href="javascript:void(0)" style="margin-bottom: 6px;" class="easyui-linkbutton" data-options="iconCls:'icon-search'" onclick="searchusers()">查询</a>
    </div>
    <div style="margin-bottom: 5px">
        <a href="javascript:void(0)" onclick="newuser()" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true">添加</a>
        <a href="javascript:void(0)" onclick="edituser()" class="easyui-linkbutton" data-options="iconCls:'icon-edit',plain:true">修改</a>
        <a href="javascript:void(0)" onclick="deleteuser()" class="easyui-linkbutton" data-options="iconCls:'icon-remove',plain:true">删除</a>
        <a href="javascript:void(0)" onclick="refresh()" class="easyui-linkbutton" data-options="iconCls:'icon-reload',plain:true">刷新</a>
    </div>
</div>

<table id="dg" class="easyui-datagrid" title="用户列表"
    data-options="iconCls: 'icon-query',singleSelect:true,url: '/User/Query',rownumbers:true"
    style="width: 98%; height: auto;">
    <thead>
        <tr>
            <th data-options="field:'id'" style="width: 10%;">编号</th>
            <th data-options="field:'uname'" style="width: 20%;">用户名</th>
            <th data-options="field:'rname'" style="width: 20%;">真实姓名</th>
            <th data-options="field:'phone'" style="width: 25%;">联系电话</th>
            <th data-options="field:'isadmin'" style="width: 15%;">是否管理员</th>
        </tr>
    </thead>
</table>

<div id="dlg" class="easyui-dialog" style="width: 460px; height: 300px; padding: 10px 20px" closed="true" buttons="#dlg-buttons">
    <div class="ftitle">用户信息管理</div>
    <form id="fm" method="post" novalidate>
        <div class="fitem">
            <label>编号:</label>
            <input id="id" name="id" disabled="disabled" class="easyui-textbox" required="true" />
        </div>
        <div class="fitem">
            <label>用户名:</label>
            <input id="uname" name="uname" class="easyui-textbox" validtype="length[4,20]" required="true" />
        </div>
        <div class="fitem">
            <label>真实姓名:</label>
            <input id="rname" name="rname" class="easyui-textbox" validtype="length[4,20]" required="true" />
        </div>
        <div class="fitem">
            <label>联系电话:</label>
            <input id="phone" name="phone" class="easyui-textbox" validtype="length[11,20]" required="true" />
        </div>
        <div class="fitem">
            <label>是否管理员:</label>
            <select id="isadmin" name="isadmin" class="easyui-combobox" style="width: 100px;">
                <option value="1">是</option>
                <option value="0">否</option>
            </select>
        </div>
    </form>
</div>
<div id="dlg-buttons">
    <a href="javascript:void(0)" class="easyui-linkbutton c6" iconcls="icon-ok" onclick="saveuser()" style="width: 90px">保存</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')" style="width: 90px">取消</a>
</div>
