@model Logistics.Models.BuildModel

@{
    ViewBag.Title = "Â¥ÅÌ";
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
    <title>Â¥ÅÌ</title>
    <meta http-equiv="Content-Type" content="text/html; charset=GB2312" />
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquerytics")
    <style type="text/css">
        table {
            border-collapse: collapse;
            border-spacing: 0;
            border-left: 1px solid #95b8e7;
            border-top: 1px solid #95b8e7;
        }

        tr {
            height: 25px;
        }

        th {
            border-right: 1px solid #95b8e7;
            border-bottom: 1px solid #95b8e7;
            padding: 5px 15px;
            height: 25px;
        }

        td {
            border-right: 1px solid #95b8e7;
            border-bottom: 1px solid #95b8e7;
            padding: 5px 15px;
        }
    </style>
    <script type="text/javascript">
        $(function () {
            bindbuildradio();
        });
    </script>
</head>
<body>
    <table style="width: 98%;" cellspacing="1" cellpadding="3" border="0">
        <tr>
            <th style="height: 25px; text-align: center;" colspan="4">Â¥ÅÌÑ¡Ôñ</th>
        </tr>
        <tr>
            <td style="width: 100%; font-size: 12px;">
                <span>
                    @if (Model != null)
                    {
                        foreach (string m in Model.FirstLetter)
                        {
                        <input id="rdbfirstletter_@m" type="radio" name="rdbfirstletter" value="@m"/><label for="rdbfirstletter_@m">@m</label>
                        }
                    }
                </span>
            </td>
        </tr>
        <tr>
            <td style="width: 100%; font-size: 12px;">
                <span>
                    @if (Model != null)
                    {
                        foreach (Logistics.Models.BuildInfo m in Model.Build)
                        {
                        <input id="rdbbuild_@m.ID" type="radio" name="rdbbuild" value="@m.Name" /><label for="rdbbuild_@m.ID">@m.Name</label>
                        }
                    }
                </span>
            </td>
        </tr>
    </table>
</body>
</html>





