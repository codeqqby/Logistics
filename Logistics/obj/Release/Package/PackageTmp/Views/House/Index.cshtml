@{
    ViewBag.Title = "家装项目登录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .tr {
        height: 25px;
    }
</style>

<table style="width: 98%;" cellspacing="1" cellpadding="3" border="0">
    <tr>
        <th style="height:25px; text-align:center;" colspan="4">家装项目登陆</th>
    </tr>
    <tr>
        <td style="width: 15%; text-align: right;">*机型方案：
        </td>
        <td style="width: 80%;" colspan="3">
            <span id="drpType">
                <input id="drpType_0" type="radio" name="drpType" value="131" /><label for="drpType_0">多联机（包含变频多联、智能多联、FREE多组管等）</label><br><input id="drpType_1" type="radio" name="drpType" value="132" /><label for="drpType_1">非多联机（包含风管机、热水器、末端、冷水机组、风冷模块等）</label>
            </span>        </td>
    </tr>
    <tr>
        <td style="width: 15%; text-align: right;" rowspan="2">*项目地址：
        </td>
        <td style="width: 80%;" colspan="3">
            <span style="color: red">如果您要报登的楼盘没有在内，请联系0574-63887978</span>
        </td>
    </tr>
    <tr>
        <td style="width: 80%;" colspan="3">
            <select id="housetype">
                <option value="0">住房类型</option>
                <option value="小区">小区</option>
                <option value="别墅">别墅</option>
                <option value="自建">自建</option>
            </select>
            <select id="area">
                <option value="8">舟山</option>
            </select>
            <input class="easyui-textbox" id="address1" style="width: 240px;" /><span id="lb1"></span>
            <input class="easyui-textbox" value="1" readonly="readonly" id="address2" onpaste="return false" ondragenter="return false" oncontextmenu="return false;" style="width: 20px;" />
            <input class="easyui-textbox" id="address6" /><span id="lb2"></span>
            <input class="easyui-textbox" id="address3" onpaste="return false" ondragenter="return false" oncontextmenu="return false;" onkeyup="value=this.value.replace(/[^\w\-\/]/ig,'')" style="width: 30px;" /><span id="lb3"></span>
            <input class="easyui-textbox" id="address4" onpaste="return false" ondragenter="return false" oncontextmenu="return false;" onkeyup="value=this.value.replace(/[^\w\.\/]/ig,'')" style="width: 30px;" /><span id="lb4"></span>
            <input class="easyui-textbox" id="address5" style="width: 200px;" />
        </td>
    </tr>
    <tr id="build" style="display: none;">
        <td style="width: 15%; text-align: right;"></td>
        <td style="width: 80%;line-height: 0px;" colspan="3">
            <iframe id="frmBuild" src="" width="100%" style="height: 320px; margin: 0px; padding: 0px;"></iframe>
            &nbsp;
        </td>
    </tr>
    <tr>
        <td style="width: 15%; text-align: right;">*客户姓名：
        </td>
        <td style="width: 80%;">
            <input id="name" class="easyui-textbox"  style="width: 200px;" />
        </td>
    </tr>
    <tr>
        <td style="width: 15%; text-align: right;">*联系电话：
        </td>
        <td style="width: 80%;">
            <input id="tel" class="easyui-textbox"  style="width: 200px;" />
        </td>
    </tr>
    <tr>
        <td style="width: 15%; text-align: right;">*项目初报价金额：
        </td>
        <td style="width:80%">
            <input id="price" class="easyui-textbox" style="width: 200px;" />
        </td>
    </tr>
    <tr>
        <td style="width: 15%; text-align: right;">&nbsp;
        </td>
        <td style="width: 80%;" colspan="3">
                <a href="#" onclick="" class="easyui-linkbutton" data-options="iconCls:'icon-ok'">登录</a>
                <a href="#" onclick="" class="easyui-linkbutton" data-options="iconCls:'icon-reset'">重置</a>
        </td>
    </tr>
</table>

